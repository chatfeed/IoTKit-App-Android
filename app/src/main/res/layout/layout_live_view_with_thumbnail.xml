<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fLayout_live_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgv_live_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/default_diagram_mask" />

    <ImageView
        android:id="@+id/imgv_live_motion_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/motion_area_shape"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_live_flow"
        android:layout_width="@dimen/x60"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/x14"
        android:layout_marginStart="@dimen/x14"
        android:layout_marginTop="@dimen/x14"
        android:background="@drawable/flow_bg"
        android:gravity="center"
        android:text="0K/s"
        android:textColor="@color/color_white"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/fLayout_standby_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_2A3C58"
        android:visibility="gone">

        <TextView
            android:id="@+id/lLayout_standby_jump_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/x17"
            android:drawableTop="@drawable/icon_camera_standby"
            android:gravity="center"
            android:text="@string/Tap1_Camera_Video_DormantTips"
            android:textColor="@android:color/white" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/v_mobile_data_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v_guide"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y12"
            android:layout_marginEnd="@dimen/x52"
            android:layout_marginStart="@dimen/x52"
            android:gravity="center_horizontal"
            android:text="@string/Tap1_Firmware_DataTips"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp14" />

        <View
            android:id="@+id/v_guide"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/btn_go_ahead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_guide"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y12"
            android:background="@drawable/btn_sight_setting"
            android:gravity="center"
            android:text="@string/CARRY_ON"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>
</FrameLayout>
