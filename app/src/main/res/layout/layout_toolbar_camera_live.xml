<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.cylan.jiafeigou.n.view.activity.CameraLiveActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgV_nav_back"
            style="@style/ripple_background"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y48"
            android:paddingEnd="@dimen/x20"
            android:paddingStart="@dimen/x20"
            android:src="@drawable/nav_icon_back_white" />

        <com.cylan.jiafeigou.widget.indicator.PagerSlidingTabStrip
            android:id="@+id/v_indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y48"
            app:pstsTabPaddingLeftRight="14dip" />
    </LinearLayout>

    <com.cylan.jiafeigou.widget.ImageViewTip
        android:id="@+id/imgV_camera_title_top_setting"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y48"
        android:layout_gravity="bottom|end"
        android:paddingEnd="@dimen/x20"
        android:paddingStart="@dimen/x20"
        android:src="@drawable/icon_setting"
        app:t_border_color="@color/color_white"
        app:t_border_width="@dimen/y1"
        app:t_point_color="@color/color_red_dot_f43531"
        app:t_radius="@dimen/x4"
        app:t_round_image="true" />

</FrameLayout>
