            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/v_to_bind_camera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y67"
                android:layout_marginTop="@dimen/y25"
                android:background="@color/color_white"
                hunt:leftDrawable="@drawable/icon_home_camera_online"
                hunt:rightDrawable="@drawable/icon_mine_arrow_next"
                hunt:text="@string/DOG_CAMERA_NAME"
                hunt:textColor="@color/color_666666"
                hunt:textSize="@dimen/sp16" />

            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/v_to_bind_cam_outdoor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y67"
                android:background="@color/color_white"
                hunt:leftDrawable="@drawable/home_icon_outcam"
                hunt:rightDrawable="@drawable/icon_mine_arrow_next"
                hunt:text="@string/Camera_Outdoor"
                hunt:textColor="@color/color_666666"
                hunt:textSize="@dimen/sp16" />

            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/v_to_bind_cam_outdoor_4g"
                android:layout_width="match_parent"
