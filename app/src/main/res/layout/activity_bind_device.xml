                hunt:leftDrawable="@drawable/home_icon_hemisphere"
                hunt:rightDrawable="@drawable/icon_mine_arrow_next"
                hunt:text="@string/HALF_CAMERA"
                hunt:textColor="@color/color_666666"
                hunt:textSize="@dimen/sp16" />

            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/v_to_bind_consumer_cam"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y67"
                android:background="@color/color_white"
                hunt:leftDrawable="@drawable/home_icon_rs_online"
                hunt:rightDrawable="@drawable/icon_mine_arrow_next"
                hunt:text="@string/Consumer_Camera"
                hunt:textColor="@color/color_666666"
                hunt:textSize="@dimen/sp16" />

            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/v_to_bind_bell_battery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y67"
                android:background="@color/color_white"
                hunt:leftDrawable="@drawable/icon_home_doorbell_online"
                hunt:rightDrawable="@drawable/icon_mine_arrow_next"
                hunt:text="@string/Smart_bell_Battery"
                hunt:textColor="@color/color_666666"
                hunt:textSize="@dimen/sp16" />

            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/v_to_bind_bell_no_battery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y67"
                android:background="@color/color_white"
                hunt:leftDrawable="@drawable/icon_home_doorbell_online"
                hunt:rightDrawable="@drawable/icon_mine_arrow_next"
                hunt:text="@string/Smart_bell_Power"
                hunt:textColor="@color/color_666666"
                hunt:textSize="@dimen/sp16" />

            <com.cylan.jiafeigou.widget.HomeMineItemView
                android:id="@+id/v_to_bind_cat_eye_cam"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y67"
                android:background="@color/color_white"
                hunt:leftDrawable="@drawable/home_icon_intelligent_eye"
                hunt:rightDrawable="@drawable/icon_mine_arrow_next"
