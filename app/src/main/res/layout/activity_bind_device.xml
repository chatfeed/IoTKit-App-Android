<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hunt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f4f4f4"
    android:orientation="vertical"
    tools:context="com.cylan.jiafeigou.n.view.activity.BindDeviceActivity">

    <com.cylan.jiafeigou.widget.CustomToolbar
        android:id="@+id/custom_toolbar"
        layout="@layout/layout_default_custom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hunt:ct_background_color="@color/color_0ba8cf"
        hunt:ct_enable_shadow="true"
        hunt:ct_enable_theme="true"
        hunt:ct_fit_system_window="true"
        hunt:ct_icon="@drawable/nav_icon_back_white"
        hunt:ct_title="@string/DEVICES_TITLE"
        hunt:ct_title_color="@color/color_white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y124"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/v_to_scan_qrcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/y5"
                    android:drawableTop="@drawable/icon_scan"
                    android:gravity="center"
                    android:text="@string/Add_Device_Scan_QR"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/v_to_lan_mode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/y5"
                    android:drawableTop="@drawable/icon_wired"
                    android:gravity="center"
                    android:text="@string/Cable_Mode"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/v_to_input_sn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/y5"
                    android:drawableTop="@drawable/icon_sn"
                    android:gravity="center"
                    android:text="@string/Add_Device_SN"
                    android:textColor="@color/color_333333" />
            </LinearLayout>
