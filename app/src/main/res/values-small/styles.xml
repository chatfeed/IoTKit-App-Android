<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_4b9fd5</item>
        <item name="colorControlNormal">@color/color_4b9fd5</item>
        <item name="colorControlActivated">@color/color_4b9fd5</item>
    </style>

    <style name="edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#c2c2c2</item>
        <item name="android:textColor">#555555</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:background">@drawable/me_icon_hlep</item>
    </style>

    <style name="submit_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_btn_textsize</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="dialog_button">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">4dip</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
    </style>

</resources>